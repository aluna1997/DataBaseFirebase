<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unam.falv.databasefirebase.MainActivity">

    <EditText
        android:id="@+id/mensajeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mensaje"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/modificarButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mensajeTextView"
        android:layout_width="460dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Hello World!"
        android:textSize="36dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="modificar"
        android:id="@+id/modificarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modificar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

</RelativeLayout>
